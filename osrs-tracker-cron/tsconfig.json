{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/**/*.ts"
    ]
}